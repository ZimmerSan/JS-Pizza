<% include common/header.ejs %>

<div class="container">
    <div class="row order-page-panel">
        <div class="col-lg-9 col-md-8 col-sm-8 col-xs-7 left-panel">
            <div class="col-lg-12 content">
                <div class="contact-form">
                    <div class="row ">
                        <div class="col-md-12 form-description"><h3>1. Контактні дані</h3></div>
                    </div>
                    <div class="row">
                        <div class="col-md-7">
                            <form class="form-horizontal">
                                <div class="form-group name-group">
                                    <label class="col-sm-2 control-label">Ім’я</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" type="text" id="inputName"
                                               placeholder="Ім’я та прізвище">
                                    </div>
                                    <span class="validation-fail name-help-block" style="display:none">
                                        Введіть тільки ім’я та прізвище, без цифр
                                    </span>
                                </div>
                                <div class="form-group phone-group">
                                    <label class="col-sm-2 control-label">Телефон</label>

                                    <div class="col-sm-10">
                                        <input class="form-control" type="text" id="inputPhone"
                                               placeholder="+380123456789">
                                    </div>
                                    <span class="validation-fail phone-help-block" style="display:none">
                                        Введіть номер телефону у форматі +380 або почніть з 0
                                    </span>
                                </div>
                                <div class="form-group address-group">
                                    <label class="col-sm-2 control-label">Адреса</label>

                                    <div class="col-sm-10">
                                        <input class="form-control" type="text" id="inputAddress"
                                               placeholder="Київ, вул. М.Цвєтаєвої, 14Б">
                                    </div>
                                    <span class="validation-fail address-help-block" style="display:none">
                                        Введіть адресу доставки піци
                                    </span>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-5 order-cummary"></div>
                    </div>
                    <div class="row">
                        <div class="form-group pull-right">
                            <button type="button" class="btn btn-warning next-step-button">
                                Далі
                                <span class="glyphicon glyphicon-chevron-right"></span>
                            </button>
                        </div>
                    </div>
                </div>
            </div><!-- /content -->
        </div><!-- /left-panel -->
    </div>
    <% include common/rightPanel.ejs %>
</div>

<% include common/footer.ejs %>